<p>
  <strong>Semestre:</strong>
  <%= @semestre.numero %>
</p>
<h5>UEs:</h5>
<table>
  <thead>
  <tr>
    <th>Titre</th>
    <th>Objectif</th>
    <th>Lieu</th>
    <th>Prérequis</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @semestre.ues.order(:titre).each do |ue| %>
    <tr>
      <td><%= ue.titre %></td>
      <td><%= ue.objectif %></td>
      <td><%= ue.prerequis %></td>
      <td><%= ue.lieu %></td>
    </tr>
  </tbody>
    <% end %>
</table>
<%= link_to 'Éditer', edit_admin_semestre_path(@semestre) %> |
<%= link_to 'Retour', semestres_path %>
<%= link_to 'PDF', semestre_path(@semestre, :format => 'pdf'), class: 'btn btn-primary' %>
