<p id="notice"><%= notice %></p>

<h1>Listing Cours</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cours.each do |cour| %>
      <tr>
        <td><%= cour.titre %></td>
        <td><%= cour.description %></td>
        <td><%= cour.type %></td>
        <td><%= link_to 'Show', cour %></td>
        <td><%= link_to 'Edit', edit_cour_path(cour) %></td>
        <td><%= link_to 'Destroy', cour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

